doctype html
html
 head
  title= pageTitle 
  link(rel='stylesheet', href='/stylesheets/style.css')
  link(rel='stylesheet', href='/stylesheets/bootstrap.css')
  link(rel='stylesheet', href='/stylesheets/additions.css')

  body#reg
   div.container
    div.row
     div.reg-container
      center
       hr#hr-top
       h1.reg-header. REGISTER PLAYER
       hr#hr-bottom


      center
       form(action='/processRegisterPlayer', name='registerPlayer', id='regMe', method='post')
        table
         tr
          td.inputTitleWrap. FULL NAME:
          td.inputFieldWrap
           input(name='playerName', type='text', value='')

         tr
          td.inputTitleWrap. USERNAME:
          td.inputFieldWrap
           input(name='playerUserName', type='text', value='')

         tr
          td.inputTitleWrap. PASSWORD:
          td.inputFieldWrap
           input(name='playerPassWord', type='password', value='')

         tr
          td.inputTitleWrap. EMAIL:
          td.inputFieldWrap
           input(name='playerEmail' , type="email" , pattern="[^ @]*@[^ @]*" ,  value="")

         tr
          td.inputTitleWrap. CLUB CODE:
          td.inputFieldWrap
           input(name='clubCode', type='text', value='' maxlength="3" id="codeField")

         tr
          td.inputTitleWrap
          td.inputFieldWrap
           input(type='submit', value'REGISTER' class='btn reg-btn')




      
      